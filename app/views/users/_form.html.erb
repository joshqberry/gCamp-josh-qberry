

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>


<!-- Note to me JQ: for some reason yet unknown to me, you can't put the following form class above
the form_for notation or else your buttons won't register your actions. Huh. -->


    <form class="form-horizontal">
      <div class="form-group">
        <div class="col-md-offset-1 col-md-1 text-nowrap">
        <%= f.label :first_name %></div>
        <div class="col-md-4">
        <%= f.text_field :first_name, :size => 50 %>
        </div>
      </div>

    <br>
    <br>

    <div class="form-group">
      <div class="col-md-offset-1 col-md-1 text-nowrap">
        <%= f.label :last_name %></div>
        <div class="col-md-4">
        <%= f.text_field :last_name, :size => 50  %></div>
      </div>

      <br>

      <div class="form-group" style="padding-top: 6px">
        <div class="col-md-offset-1 col-md-1">
          <%= f.label :email %></div>
          <div class="col-md-4">
          <%= f.email_field :email, :size => 50  %></div>
        </div>

    <br>

    <div class="form-group" style="padding-top: 6px">
      <div class="col-md-offset-2">
        &nbsp;<%= f.submit class: "btn btn-primary" %>
        <% if current_page?(:action => 'new') %>
        &nbsp;&nbsp;<%= link_to 'Cancel', users_path, class: "btn btn-default" %>
        <% else %>
        &nbsp;&nbsp;<%= link_to 'Destroy', user_path(@user), class: "btn btn-danger", method: :delete, data:
        { confirm: 'Are you sure?' } %>&nbsp;&nbsp;&nbsp;
        <%= link_to 'Cancel', users_path, class: "btn btn-default" %>

    <% end %>


        </div>
  </div>



<br>

    <% end %>

</form>

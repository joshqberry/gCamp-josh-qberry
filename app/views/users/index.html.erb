<div class="page-header">
  <div class="pull-right">
    <a href="/users/new" <button type="button" class="btn btn-info">New user</button></a>
  </div>
  <h1>Users</h1>
</div>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>



    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user do %>
          <%= user.first_name %>&nbsp;<%= user.last_name %></td>
          <% end %>
        <td><%= mail_to(user.email) %> </td>


        <!-- <td><%= link_to 'Show', user %></td> -->
        <td><div class="text-right">
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-info" %>
        <%= link_to 'Destroy', user, class: "btn btn-danger", method: :delete, data:
        { confirm: 'Are you sure?' } %>



        </div></td>

    </tr>






    <% end %>


  </tbody>
</table>





<div class="well col-md-offset-4 col-md-4">
<div class="page-header" style="border-bottom:1px solid black; margin-top:-15px">


<h1>Sign in</h1>
</div>


<%= form_for(:session, url: login_path) do |f| %>

  <div class="form-group">
    <div class = "row">
    <div class="col-md-1 text-nowrap" >
    <%= f.label :email %></div></div>
    <div class = "row">
    <div class="col-md-12" style="padding-top:5px">
    <%= f.email_field :email, class: 'form-control', :size => 30 %></div></div>
  </div>


  <div class="form-group" style="padding-top:5px">
      <div class = "row">
      <div class="col-md-1 text-nowrap" style="float:none" >
      <%= f.label :password %></div></div>
      <div class = "row">
      <div class="col-md-12" >
      <%= f.password_field :password, class: 'form-control', :size => 30 %></div></div>
  </div>


<div class="form-group">
    <div class="col-md-offset-4 col-md-1" style="float:none">
    &nbsp;<%= f.submit "Log in", class: "btn btn-primary" %></div>
</div>

<% end %>
</div>  <!-- closes well  -->



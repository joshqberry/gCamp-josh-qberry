

<h1>Sign in</h1>

<hr>

<%= form_for(:session, url: login_path) do |f| %>

<form class="form-horizontal">

  <div class="form-group">
    <div class="col-md-offset-1 col-md-1 text-nowrap">
    <%= f.label :email %></div>
    <div class="col-md-4">
    <%= f.email_field :email, class: 'form-control', :size => 50 %></div>
  </div>

<br>
<br>

<div class="form-group" style="padding-top:5px">
  <div class="col-md-offset-1 col-md-1 text-nowrap" >
    <%= f.label :password %></div>
    <div class="col-md-4" >
    <%= f.password_field :password, class: 'form-control', :size => 50  %></div>
  </div>

<br>
<br>

<div class="form-group">
  <div class="col-md-offset-2 col-md-1" >
    <%= f.submit "Log in" %></div>
  </div>


<% end %>

<br>

</form>

<div class="well col-md-offset-4 col-md-4">
<div class="page-header" style="border-bottom:1px solid black; margin-top:-15px">


<h1>Sign in</h1>
</div>


<%= form_for(:session, url: login_path) do |f| %>

<!-- Note that this form does not use "form-control" while my sign-up page does... this is on purpose so
I can examine the differences beteween them... -->

  <div class="form-group">
    <div class="col-md-1 text-nowrap" style="float:none">
    <%= f.label :email %></div>
    <div class="col-md-4">
    <%= f.email_field :email, :size => 45 %></div>
  </div>

<br>

<div class="form-group" style="padding-top:5px">
  <div class="col-md-1 text-nowrap" style="float:none" >
    <%= f.label :password %></div>
    <div class="col-md-4" >
    <%= f.password_field :password, :size => 45  %></div>
  </div>

<br>
<br>

<div class="form-group">
  <div class="col-md-offset-4 col-md-1" style="float:none" >
    <%= f.submit "Log in", class: "btn btn-primary" %></div>
  </div>

</div>
<% end %>



<% if @task.errors.any? %>
  <% @form_errors = @task.errors.count %>
  <% @the_thing_with_errors = "task" %>
  <% @full_message_errors = @task.errors.full_messages %>
<%= render '/shared/errors' %>
<% end %>


<%= form_for(@task) do |f| %>



<!-- Note to me JQ: for some reason yet unknown to me, you can't put the following form class above
the form_for notation or else your buttons won't register your actions. Huh. -->


    <form class="form-horizontal">
      <div class="form-group">
        <div class="col-md-offset-1 col-md-1">
        <%= f.label :description %></div>
        <div class="col-md-4">
        <%= f.text_field :description, :size => 50 %>
        </div>
      </div>

    <br>
    <br>

    <div class="form-group">
      <div class="col-md-offset-1 col-md-1">
        <%= f.label :due_date %></div>
        <div class="col-md-4">
        <%= f.date_select :due_date %></div>
      </div>

    <br>

    <div class="form-group">
      <div class="col-md-offset-2">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to 'Cancel', tasks_path, class: "btn btn-default" %></div>
    </div>

    <div class="col-md-offset-2 col-md-4">
    <% if current_page?(:controller => 'tasks', :action => 'new') %>
    <%= f.check_box :cbox, :style => 'visibility: hidden' %>
    <% else %>
    <%= f.check_box :cbox %>
    <span> &nbsp; Task has been completed.</span>

    <% end %>

    </div>

<br>

    <% end %>

</form>

<h1><%= @task.description %>
<%= link_to 'Edit', edit_project_task_path(@project, @task), class: "btn btn-info pull-right" %></h1>
<hr>

<!-- <p id="notice"><%= notice %></p> -->


<ol class ="breadcrumb">
  <li>
    <%= link_to "Projects", projects_path %>
  </li>
  <li>
  <%= link_to @project.name, project_path(@project) %>
  </li>
  <li>
  <%= link_to "Tasks", project_tasks_path(@project) %>
  </li>
  <li class="active"><%= @task.description %></li>
</ol>


<dl class="dl-horizontal">
<dt style="text-align:left; width:100px"><b>Completed?</b></dt>
<dd style="text-align:left; margin-left:0px"><%= @task.cbox %></dd>
<br>
<dt style="text-align:left; width:100px"><b>Due date:</b></dt>
<dd style="text-align:left; margin-left:0px"><%= @task.due_date %></dd>
</dl>



<div class="col-md-2" style="border-top:1px solid black; padding-left:0px">


<h1>Comments</h1>

</div>

<br>
<br>
<br>
<div class="row" style="margin-top:15px">

<div class="col-md-3">

  <% @comments.each do |comment| %>

    <% if comment.user.present? %>
<h3><%= link_to comment.user.full_name, user_path(comment.user) %></h3>
<% else %>
<br>
            <div class='text-muted' style="font-style:italic"><h4>(deleted user)</h4></div>
            <% end %>

<div class='text-muted'><%= time_ago_in_words(comment.created_at) %> ago</div>

<% end %>
</div>


<div class="col-md-9">
    <% @comments.each do |comment| %>
    <br>
    <div style="vertical-align: bottom"><%= comment.body %></div>
    <br>
    <br>
  <% end %>

  </div>
</div>

<div class="col-md-offset-3 col-md-9">
<%= form_for [@project, @task, @comment] do |f| %>


<br>


      <div class="form-group">
        <div>
        <%= f.text_area :body, class: "form-control" %>
        </div>
      </div>



    <div class="form-group">
      <div>
        <%= f.submit 'Add comment', class: "btn btn-primary" %></div>
    </div>

<br>

    <% end %>
</div>


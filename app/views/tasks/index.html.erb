<div class="page-header">
  <div class="pull-right">
    <a href="/tasks/new" <button type="button" class="btn btn-info">New task</button></a>
  </div>
  <h1>Tasks</h1>
</div>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due Date</th>
      <th>Completed?</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>



    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.due_date %></td>
        <td><%= task.cbox %></td>
        <!-- <td><%= link_to 'Show', task %></td> -->
        <td><div class="text-right">
          <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
        <%= link_to 'Destroy', task, class: "btn btn-danger", method: :delete, data:
        { confirm: 'Are you sure?' } %>

        </div></td>



    </tr>

    <% end %>
  </tbody>
</table>





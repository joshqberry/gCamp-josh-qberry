


<div class="page-header">
  <div class="pull-right">
    <%= link_to 'New Task', new_project_task_path(@project), class: "btn btn-info" %>
  </div>
  <h1>Tasks for <%= @project.name %></h1>
</div>

<ol class ="breadcrumb">
  <li>
    <%= link_to "Projects", projects_path %>
  </li>
  <li>
  <%= link_to @project.name, project_path(@project) %>
  </li>
    <li class="active">Tasks</li>
</ol>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Completed?</th>
      <th>Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>



    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.cbox %></td>
        <td><%= task.due_date %></td>


        <td><div class="text-right">
          <%= link_to 'Show', project_task_path(@project, task), class: "btn btn-success" %>
          <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info" %>
        <%= link_to 'Destroy', project_task_path(@project, task), class: "btn btn-danger", method: :delete, data:
        { confirm: 'Are you sure?' } %>



        </div></td>

    </tr>






    <% end %>


  </tbody>
</table>
